{% extends 'admin.base' %}

{% block title %}{{ trans('Yggdrasil::config.title') }}{% endblock %}

{% block content %}
<style>
  textarea {
    font-family: "SFMono-Regular", Consolas, "Liberation Mono", Menlo, Courier, monospace;
  }
</style>

<div class="row">
  <div class="col-md-6">
    {{ forms.common|raw }}
  </div>
  <div class="col-md-6">
    <div class="card card-success">
      <div class="card-header">
        <h3 class="card-title"><i class="fa fa-star"></i> API Root</h3>
      </div>
      <div class="card-body">
        <p>{{ trans('Yggdrasil::dnd.url', {endpoint: url('/api/yggdrasil')}) }}</p>
        <p>
          {{ trans('Yggdrasil::config.body', {href: "https://github.com/bs-community/yggdrasil-api/wiki/0x03-%E9%85%8D%E5%90%88-authlib-injector-%E4%BD%BF%E7%94%A8"}) }}
        </p>
      </div>
    </div>

    {{ forms.keypair|raw }}
  </div>
</div>
{% endblock %}
